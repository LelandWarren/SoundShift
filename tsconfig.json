{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "preserve",
    "types": ["vite/client", "node", "chrome"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/shims-soundtouchjs.d.ts", "src/shims-vue.d.ts", "src/shims-audio.d.ts"],
  "exclude": ["node_modules"]
}
